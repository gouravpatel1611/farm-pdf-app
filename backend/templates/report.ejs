<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Farm Finance Report</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      color: #222;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 28px;
      text-transform: uppercase;
    }

    h2 {
      margin-top: 40px;
      font-size: 20px;
      color: #444;
      border-bottom: 2px solid #ccc;
      padding-bottom: 6px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 12px;
      font-size: 14px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
    }

    th {
      background: #f3f3f3;
      text-align: left;
    }

    .charts-container {
      display: flex;
      margin-top: 20px;
      gap: 20px;
    }

    .charts-container img {
      width: 300px;
      border: 1px solid #ddd;
      padding: 6px;
      background: white;
    }

    .section {
      margin-bottom: 40px;
    }

    .info-box p {
      margin: 6px 0;
    }

    footer {
      text-align: center;
      margin-top: 40px;
      font-size: 12px;
      color: #666;
    }
  </style>
</head>

<body>

  <h1>Farm Finance Report</h1>

  <div class="section">
    <h2>Finance Summary </h2>
    <table>
      <tr><th>Total Income</th><td>₹ <%= summary.totalIncome %></td></tr>
      <tr><th>Total Expense</th><td>₹ <%= summary.totalExpense %></td></tr>
      <tr><th>Profit / Loss</th><td>₹ <%= summary.profitLoss %></td></tr>
      <tr><th>Cost Per Acre</th><td>₹ <%= summary.costPerAcre.toFixed(2) %></td></tr>
    </table>
  </div>

  <!-- CHARTS -->
  <div class="section">
    <h2>Charts</h2>

    <div class="charts-container">
      <div>
        <h4>Expense Chart</h4>
        <img src="<%= mycharts.expenseChart %>" alt="Expense Chart">
      </div>

      <div>
        <h4>Income (Revenue) Chart</h4>
        <img src="<%= mycharts.incomeChart %>" alt="Revenue Chart">
      </div>
    </div>
  </div>

  <!-- EXPENSE TABLE -->
  <div class="section">
    <h2>Expense Details</h2>
    <table>
      <tr>
        <th>Category</th>
        <th>Amount (₹)</th>
        <th>Date</th>
        <th>Description</th>
      </tr>

      <% data.expenses.forEach(e => { %>
        <tr>
          <td><%= e.category %></td>
          <td><%= e.amount %></td>
          <td><%= e.date %></td>
          <td><%= e.description %></td>
        </tr>
      <% }) %>
    </table>
  </div>

  <!-- INCOME TABLE -->
  <div class="section">
    <h2>Income (Revenue) Details</h2>
    <table>
      <tr>
        <th>Category</th>
        <th>Amount (₹)</th>
        <th>Date</th>
        <th>Description</th>
      </tr>

      <% data.incomes.forEach(i => { %>
        <tr>
          <td><%= i.category %></td>
          <td><%= i.amount %></td>
          <td><%= i.date %></td>
          <td><%= i.description %></td>
        </tr>
      <% }) %>
    </table>
  </div>

  <!-- LEDGER TABLE -->
  <div class="section">
    <h2>Ledger (Complete Record)</h2>
    <table>
      <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Type</th>
        <th>Description</th>
        <th>Amount (₹)</th>
      </tr>

      <% mixdata.forEach(i => { %>
        <tr>
          <td><%= i.date %></td>
          <td><%= i.category %></td>
          <td><%= i.type %></td>
          <td><%= i.des %></td>
          <td><%= i.amount %></td>
        </tr>
      <% }) %>
    </table>
  
  </div>



</body>
</html>
