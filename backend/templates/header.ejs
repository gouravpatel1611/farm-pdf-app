<div style="width: 100%; font-family: Arial, sans-serif; font-size: 12px; display: flex; justify-content: space-between; align-items: center; padding: 5px 10px; border-bottom: 1px solid #ccc;">

  <!-- Logo and Report Title -->
  <div style="display: flex; align-items: center;">
    <img src="data:image/png;base64,<%= iconBase64 %>" alt="GramIQ Logo" style="height: 80px; margin-right: 10px;" />
    <div>
      <div style="font-weight: bold; font-size: 16px;">
        <%= reportTitle %> <!-- crop_acres_season_year -->
      </div>
      <div style="font-size: 12px; color: #555;">
        Report generated on: <%= generatedOn %> <!-- timestamp -->
      </div>
    </div>
  </div>

  <!-- Farmer Name -->
  <div style="text-align: right; font-size: 20px; font-weight: bold;">
    Farmer: <%= farmerName %>
  </div>
</div>
